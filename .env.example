# Application Configuration
APP_NAME="Online Computer Teacher Hub"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/online-computer-teacher-hub

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=online_computer_teacher_hub
DB_USER=root
DB_PASS=password
DB_CHARSET=utf8mb4

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Online Computer Teacher Hub"

# Payment Configuration
PAYMENT_GATEWAY=stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Security Configuration
ENCRYPTION_KEY=your-secret-encryption-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Session Configuration
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=octh_
CACHE_DEFAULT_TTL=3600

# Redis Configuration (if using Redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
VIDEO_MAX_SIZE=524288000

# Video Processing
VIDEO_PROCESSING_ENABLED=true
FFMPEG_PATH=/usr/bin/ffmpeg

# Social Media Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Exam Configuration
EXAM_TIME_LIMIT_ENABLED=true
EXAM_DEFAULT_DURATION=60
EXAM_PASSING_SCORE=70
EXAM_MAX_ATTEMPTS=3

# Job Board Configuration
JOB_POSTING_ENABLED=true
JOB_APPROVAL_REQUIRED=true
JOB_POSTING_FEE=0

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false

# SMS Configuration (if enabled)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=your_sms_from_number

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.example.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30